<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:id="@+id/dpad_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_up"
            style="@style/dpad_text_background"
            android:focusable="true"
            android:text="Dpad UP"
            android:layout_gravity="center|top"/>
        <TextView
            android:id="@+id/text_bottom"
            style="@style/dpad_text_background"
            android:text="Dpad down"
            android:focusable="true"
            android:layout_gravity="center|bottom"/>
        <TextView
            android:id="@+id/text_left"
            style="@style/dpad_text_background"
            android:text="Dpad left"
            android:focusable="true"
            android:layout_gravity="center|left"/>
        <TextView
            android:id="@+id/text_right"
            style="@style/dpad_text_background"
            android:text="Dpad right"
            android:focusable="true"
            android:layout_gravity="center|right"/>
        <TextView
            android:id="@+id/text_center"
            style="@style/dpad_text_background"
            android:focusable="false"
            android:text="Dpad CENTER"
            android:layout_gravity="center"/>
    </FrameLayout>
</layout>