<resources>

    <style name="AppTheme" parent="@style/OnyxAppCompat">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.AvoidMultiTouch" parent="AppTheme">
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <style name="AppTheme.FullScreen" parent="@style/OnyxAppCompat">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="OnyxAppCompat" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorControlNormal">@android:color/black</item>
        <item name="android:windowBackground">@android:color/white</item>
        <!--Disable OverFlown Button(3-dot button)-->
        <item name="actionOverflowButtonStyle">@null</item>
        <!--Remove 1px shadow between status bar and window content-->
        <item name="android:windowContentOverlay">@android:color/transparent</item>

        <item name="android:listDivider">@android:color/black</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:selectableItemBackground">@drawable/imagebtn_underline_bg</item>
    </style>
    <style name="text_background">
        <item name="android:padding">@dimen/octm_brightness_fragment_button_icon_padding</item>
        <item name="android:background">@drawable/button_focus_background</item>
    </style>

    <style name="dpad_text_background">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">160dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/text_focus_background</item>
    </style>

</resources>
